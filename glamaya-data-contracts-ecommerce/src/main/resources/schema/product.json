{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Generated schema for Glamaya E-Commerce Product",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "wixId": {
      "type": "string"
    },
    "wooId": {
      "type": "string"
    },
    "wixSku": {
      "type": "string"
    },
    "wooSku": {
      "type": "string",
      "description": "woocommerce fields"
    },
    "wixName": {
      "type": "string"
    },
    "wooName": {
      "type": "string"
    },
    "wixSlug": {
      "type": "string"
    },
    "wooSlug": {
      "type": "string"
    },
    "price": {
      "$ref": "#/definitions/price"
    },
    "weight": {
      "type": "number"
    },
    "stock": {
      "type": "object",
      "properties": {
        "trackInventory": {
          "type": "boolean"
        },
        "quantity": {
          "type": "integer"
        },
        "inStock": {
          "type": "boolean"
        }
      }
    },
    "manageVariants": {
      "type": "boolean"
    },
    "productOptions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "optionType": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "choices": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "value": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "inStock": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    },
    "variants": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "choices": {
            "type": "object",
            "properties": {
              "size": {
                "type": "string"
              }
            }
          },
          "variantDetail": {
            "type": "object",
            "properties": {
              "priceData": {
                "$ref": "#/definitions/price"
              },
              "convertedPriceData": {
                "$ref": "#/definitions/price"
              },
              "weight": {
                "type": "number"
              },
              "sku": {
                "type": "string"
              },
              "visible": {
                "type": "boolean"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "image": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "mediaID": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "width": {
          "type": "integer"
        },
        "height": {
          "type": "integer"
        },
        "altText": {
          "type": "string"
        },
        "mediaType": {
          "type": "string"
        }
      }
    },
    "price": {
      "type": "object",
      "properties": {
        "currency": {
          "type": "string"
        },
        "costPrice": {
          "type": "integer",
          "description": "Custom fields"
        },
        "resellingPrice": {
          "type": "integer"
        },
        "wixSellingPrice": {
          "type": "integer"
        },
        "wixMrp": {
          "type": "integer"
        },
        "wooSellingPrice": {
          "type": "integer"
        },
        "wooMrp": {
          "type": "integer"
        }
      }
    }
  }
}