{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Woocommerce Category Search Request to filter Categories",
  "type": "object",
  "javaInterfaces" : ["java.io.Serializable", "Cloneable"],
  "properties": {
    "context": {
      "type": "integer"
    },
    "exclude": {
      "description": "Comma separated list of ids",
      "type": "string"
    },
    "fetch_latest": {
      "type": "boolean",
      "default": false
    },
    "hide_empty": {
      "type": "boolean",
      "default": false
    },
    "include": {
      "description": "Comma separated list of ids",
      "type": "string"
    },
    "offset": {
      "type": "integer"
    },
    "order": {
      "$ref": "common-enum-schema.json#/definitions/sort_order"
    },
    "orderby": {
      "$ref": "#/definitions/orderby"
    },
    "page": {
      "type": "integer",
      "default": 1
    },
    "parent": {
      "type": "integer"
    },
    "parent_exclude": {
      "type": "string"
    },
    "per_page": {
      "type": "integer",
      "default": 10
    },
    "product": {
      "type": "integer"
    },
    "search": {
      "type": "string"
    },
    "slug": {
      "type": "string"
    },
    "update_db": {
      "type": "boolean",
      "default": false
    },
    "_fields": {
      "type": "string"
    }
  },
  "definitions": {
    "orderby": {
      "javaType": "CategoryOrderBy",
      "javaInterfaces" : ["java.io.Serializable", "Cloneable"],
      "description": "Represents the field to be sorted by. The \"name\" to be used in sorting from DB, \"value\" to be used to sort from Woo API",
      "enum": ["id", "count", "description", "include", "name", "slug", "term_group"],
      "javaEnums": [
        {"name": "id"},
        {"name": "count"},
        {"name": "description"},
        {"name": "include"},
        {"name": "name"},
        {"name": "slug"},
        {"name": "term_group"}
      ],
      "default": "name"
    }
  }
}